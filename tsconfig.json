{
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "target": "ES5", // Specify the target ECMAScript version
    "module": "commonjs", // Specify module system (CommonJS for Node.js)
    "outDir": "./build", // Specify the output directory for compiled files
    "rootDir": "./src", // Specify the root directory of your TypeScript source files
    "strict": true, // Enable strict mode
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "moduleResolution": "node", // Specify module resolution strategy
    "resolveJsonModule": true, // Allow importing JSON modules
    "isolatedModules": true, // Ensure each file is treated as a separate module
    "experimentalDecorators": true, // Enable support for experimental decorators
    "emitDecoratorMetadata": true // Emit design-type metadata for decorated declarations
  },
  "include": ["src/**/*.ts"],
  "types": ["node", "jest"]
}
